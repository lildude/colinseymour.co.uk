---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en-gb" xml:base="{{ site.url }}">

 <title>{{ site.title }}</title>
 <link href="{{ site.url }}/atom.xml" rel="self"/>
 <link href="{{ site.url }}/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>{{ site.url }}/</id>
 <author>
   <name>{{ site.author.name }}</name>
   {% if site.author.email %}<email>{{ site.author.email }}</email>{% endif %}
 </author>

 {% for post in site.posts %}
 <entry>
   <title type="html">{{ post.title | xml_escape }}</title>
   {% comment %} Remove this if when Jekyll 3 comes out with support for extension-less rendering {% endcomment %}
   {% if jekyll.environment == 'local' %}
   <link href="{{ site.url }}{{ post.url }}"/>
   {% else %}
   <link href="{{ site.url }}{{ post.url | remove: '.html' }}"/>
   {% endif %}
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ site.url }}{{ post.url }}/</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}

</feed>
